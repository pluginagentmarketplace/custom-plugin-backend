{
  "agent_id": "02-database-management",
  "agent_name": "Database Management",
  "version": "1.0.0",
  "description": "Master relational and NoSQL databases, query optimization, data modeling, backup strategies, and replication for production-ready backend systems",
  "phase": 1,
  "sequence": 2,
  "duration_weeks": 10,
  "difficulty_level": "Intermediate to Advanced",
  "prerequisites": [
    "Programming fundamentals from Agent 1",
    "Basic understanding of data structures",
    "Command line proficiency",
    "SQL basics (recommended but not required)"
  ],
  "learning_objectives": [
    "Master PostgreSQL, MySQL, and other relational databases",
    "Implement NoSQL databases (MongoDB, Redis, Cassandra, DynamoDB, Elasticsearch)",
    "Design optimal database schemas and data models",
    "Optimize queries and create effective indexing strategies",
    "Implement backup and disaster recovery strategies",
    "Configure database replication and high availability",
    "Understand ACID properties and transaction management",
    "Apply security best practices and compliance requirements",
    "Monitor and troubleshoot database performance",
    "Choose appropriate database for specific use cases"
  ],
  "skills": [
    {
      "skill_id": "2.1",
      "skill_name": "Relational Databases",
      "file": "skills/relational-databases.md",
      "duration_hours": 80,
      "description": "PostgreSQL, MySQL, MariaDB, T-SQL with advanced features, performance tuning, and best practices",
      "topics": [
        "PostgreSQL advanced features and extensions",
        "MySQL storage engines and replication",
        "MariaDB enhancements and Galera Cluster",
        "T-SQL procedural programming",
        "SQL fundamentals (DDL, DML, DCL, TCL)",
        "ACID properties and transaction management",
        "Isolation levels and concurrency control",
        "Normalization and denormalization",
        "Constraints and data integrity",
        "Stored procedures and triggers"
      ]
    },
    {
      "skill_id": "2.2",
      "skill_name": "NoSQL Databases",
      "file": "skills/nosql-databases.md",
      "duration_hours": 60,
      "description": "MongoDB, Redis, Cassandra, DynamoDB, Elasticsearch with data modeling and use case comparisons",
      "topics": [
        "Document databases (MongoDB)",
        "Key-value stores (Redis)",
        "Wide-column stores (Cassandra)",
        "Cloud-native databases (DynamoDB)",
        "Search engines (Elasticsearch)",
        "NoSQL data modeling patterns",
        "CAP theorem and consistency models",
        "Sharding and partitioning strategies",
        "Replication in NoSQL systems",
        "When to use each database type"
      ]
    },
    {
      "skill_id": "2.3",
      "skill_name": "Query Optimization",
      "file": "skills/query-optimization.md",
      "duration_hours": 50,
      "description": "Query optimization techniques, indexing strategies, EXPLAIN analysis, and performance tuning",
      "topics": [
        "Understanding EXPLAIN and execution plans",
        "Index types and strategies",
        "Composite and partial indexes",
        "Query rewriting techniques",
        "N+1 query problem and solutions",
        "JOIN optimization",
        "Subquery optimization",
        "Caching strategies",
        "Common anti-patterns",
        "Database-specific optimizations"
      ]
    },
    {
      "skill_id": "2.4",
      "skill_name": "Backup & Replication",
      "file": "skills/backup-replication.md",
      "duration_hours": 50,
      "description": "Backup strategies, replication patterns, disaster recovery, and point-in-time recovery",
      "topics": [
        "Backup types (full, incremental, differential)",
        "Point-in-time recovery (PITR)",
        "Replication patterns (master-slave, multi-master)",
        "High availability configurations",
        "Disaster recovery planning",
        "Automated backup strategies",
        "Monitoring and verification",
        "Multi-region setups",
        "Failover procedures",
        "RTO and RPO planning"
      ]
    }
  ],
  "hands_on_projects": [
    {
      "project_name": "E-Commerce Database Design (PostgreSQL)",
      "description": "Design and implement a normalized database schema for an e-commerce platform with users, products, orders, payments, and reviews. Include complex queries, triggers, and stored procedures.",
      "duration_hours": 16,
      "technologies": ["PostgreSQL", "SQL", "psql", "pgAdmin"],
      "deliverables": [
        "ER diagram and normalized schema",
        "Database implementation with constraints",
        "Complex queries with JOINs and CTEs",
        "Indexes for query optimization",
        "Stored procedures for business logic",
        "Triggers for audit logging"
      ]
    },
    {
      "project_name": "Social Media API with MongoDB",
      "description": "Build a document database for a social media application with users, posts, comments, likes, and follower relationships. Implement aggregation pipelines and replica sets.",
      "duration_hours": 12,
      "technologies": ["MongoDB", "Aggregation Framework", "Replica Sets", "MongoDB Compass"],
      "deliverables": [
        "Document schema design",
        "CRUD operations implementation",
        "Aggregation pipeline for feeds",
        "Indexing strategy",
        "Replica set configuration",
        "Change streams for real-time updates"
      ]
    },
    {
      "project_name": "Redis Caching Layer",
      "description": "Implement a comprehensive caching layer using Redis with various data structures, TTL management, and cache invalidation patterns.",
      "duration_hours": 8,
      "technologies": ["Redis", "Redis CLI", "Node.js/Python client"],
      "deliverables": [
        "Cache-aside pattern implementation",
        "Multiple data structures usage",
        "TTL and expiration strategies",
        "Rate limiting with Redis",
        "Leaderboard with sorted sets",
        "Pub/Sub messaging"
      ]
    },
    {
      "project_name": "Query Optimization Challenge",
      "description": "Analyze and optimize slow queries in a large database. Use EXPLAIN plans, create indexes, and refactor queries for performance improvements.",
      "duration_hours": 10,
      "technologies": ["PostgreSQL/MySQL", "EXPLAIN", "Monitoring tools"],
      "deliverables": [
        "Slow query identification",
        "EXPLAIN plan analysis",
        "Index optimization",
        "Query rewriting",
        "N+1 query fixes",
        "Performance benchmarks before/after"
      ]
    },
    {
      "project_name": "High Availability Setup",
      "description": "Configure PostgreSQL streaming replication with automatic failover, monitoring, and point-in-time recovery capabilities.",
      "duration_hours": 12,
      "technologies": ["PostgreSQL", "Patroni/repmgr", "pgBouncer", "HAProxy"],
      "deliverables": [
        "Streaming replication setup",
        "Automatic failover configuration",
        "PITR implementation",
        "Backup automation",
        "Monitoring dashboard",
        "Disaster recovery testing"
      ]
    },
    {
      "project_name": "Polyglot Persistence Microservices",
      "description": "Design a microservices architecture using multiple databases (PostgreSQL for transactions, MongoDB for profiles, Redis for caching, Elasticsearch for search) with data consistency patterns.",
      "duration_hours": 16,
      "technologies": ["PostgreSQL", "MongoDB", "Redis", "Elasticsearch", "Docker", "Docker Compose"],
      "deliverables": [
        "Multi-database architecture design",
        "Service-specific database selection",
        "Data consistency patterns",
        "API gateway implementation",
        "Cross-service queries",
        "Monitoring and logging"
      ]
    }
  ],
  "assessment_criteria": [
    {
      "criterion": "Database Design & Modeling",
      "weight": 25,
      "assessment_method": "Design normalized schemas, create ER diagrams, choose appropriate data types, implement constraints, and make informed denormalization decisions",
      "success_indicators": [
        "Schemas are normalized to 3NF",
        "Appropriate constraints applied",
        "Foreign keys properly defined",
        "Data types optimized",
        "Denormalization justified"
      ]
    },
    {
      "criterion": "SQL & Query Proficiency",
      "weight": 25,
      "assessment_method": "Write complex queries using JOINs, CTEs, window functions, and subqueries. Demonstrate understanding of execution plans and query optimization",
      "success_indicators": [
        "Complex queries written correctly",
        "CTEs and window functions used appropriately",
        "EXPLAIN plans analyzed",
        "Queries optimized for performance",
        "Transactions handled correctly"
      ]
    },
    {
      "criterion": "NoSQL Implementation",
      "weight": 20,
      "assessment_method": "Choose appropriate NoSQL database, design data models for access patterns, implement proper indexing, and configure replication",
      "success_indicators": [
        "Correct database chosen for use case",
        "Data modeled for query patterns",
        "Indexes created strategically",
        "Replication configured",
        "Consistency levels understood"
      ]
    },
    {
      "criterion": "Performance Optimization",
      "weight": 15,
      "assessment_method": "Identify slow queries, analyze execution plans, design indexing strategies, implement caching, and tune configurations",
      "success_indicators": [
        "Slow queries identified and fixed",
        "Indexes created based on analysis",
        "Caching strategies implemented",
        "Performance improved measurably",
        "Database tuned appropriately"
      ]
    },
    {
      "criterion": "Production Operations",
      "weight": 15,
      "assessment_method": "Implement backup and recovery, configure replication and HA, perform migrations, apply security best practices, and monitor databases",
      "success_indicators": [
        "Backups automated and tested",
        "Replication configured correctly",
        "Zero-downtime migrations performed",
        "Security best practices applied",
        "Monitoring and alerting set up"
      ]
    }
  ],
  "success_metrics": [
    "Can design robust database schemas for complex applications",
